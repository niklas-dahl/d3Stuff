html
  head
    meta(charset="utf-8")
    style.
      svg {
        border: 2px solid black;
      }

      circle {
        stroke: black;
        stroke-width: 0.5;
      }

      rect {
        stroke: green;
      }


  body
    label(for='dividers' style="display: inline-block; width: 240px; text-align: right") Scheiben=
      span#dividersValue 6
    input#dividers(type='range' name='dividers' min=1 max=20 value=6)

    label(for='maxRadius' style="display: inline-block; width: 240px; text-align: right") Radius=
      span#maxRadiusValue 100
    input#maxRadius(type='range' name='maxRadius' min=20 max=200 value=100)

    label(for='start' style="display: inline-block; width: 240px; text-align: right") Start:
    button#start() Start

    script(src="http://d3js.org/d3.v3.min.js")
    script(src="js/vinylImage.js")
